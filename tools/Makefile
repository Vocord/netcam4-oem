.PHONY: clean all
all:
	for i in `find . -mindepth 1 -maxdepth 1 -type d` ; \
        do \
       	   $(MAKE) -C $$i DEBUG=$(DEBUG) ESUFFIX=$(ESUFFIX) ; \
	done
	
help:
	@echo Targets
	@echo clean	- clean autogenerated and backup files recursively
clean:
	@echo MAKELEVEL=$(MAKELEVEL)
	rm -f *.o *.ot *.dis .depend $(TARG) *.eps *.bak .*~ *~ tags
	@for i in `find . -mindepth 1 -maxdepth 1 -type d` ; \
        do \
       	   $(MAKE) -C $$i DEBUG=$(DEBUG) ESUFFIX=$(ESUFFIX) clean ; \
	done
